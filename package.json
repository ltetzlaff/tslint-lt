{
  "name": "tslint-lt",
  "version": "1.10.3",
  "description": "personal tslint config",
  "scripts": {
    "build": "tsc --watch",
    "buildOnce": "tsc",
    "test": "npm run prettier && npm run buildOnce && npm run lint",
    "prepare": "npm run buildOnce",
    "lint": "tslint --format stylish --project .",
    "prettier": "prettier --write \"**/*.{ts,tsx,css,scss,html,js,jsx,yml,json,md}\" \"!{,dist}/**\""
  },
  "files": [
    "dist",
    ".prettierrc.yml",
    ".stylelintrc.yml"
  ],
  "main": "dist/index",
  "types": "dist/index",
  "repository": {
    "type": "git",
    "url": "https://github.com/ltetzlaff/tslint-lt.git"
  },
  "author": "ltetzlaff",
  "license": "All rights reserved.",
  "devDependencies": {
    "@types/node": "^12.0.4",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "prettier": "^1.17.1",
    "stylelint": "^10.1.0",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0"
  }
}
